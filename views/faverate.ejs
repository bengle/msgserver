<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/lib/jquery.mobile-1.2.0.min.css" />
    <script src="/lib/jquery-1.8.3.min.js"></script>
    <script src="/lib/jquery.mobile-1.2.0.min.js"></script>
</head>
<body>

<div data-role="page" id="shop">
<link rel="stylesheet" type="text/css" href="/stylesheets/fav.css" />
    <div data-role="header">
        <div data-role="controlgroup" data-type="horizontal">
            　<a href="#shop" data-role="button">店铺</a>
            　<a href="#goods" data-role="button">宝贝</a>
        </div>
    </div>

    <div data-role="content" style="height:475px;background-color:#E7E7E7;">
        <ul class="shop-list-ul">
            
            <% for(var i=0;i<items.length;i++){ %>
            <li class="shop-list-li clearfix">
                <div class="shop-logo"><img src="<%= items[i].itemLogo %>" width=64 height=64 /></div>
                <div class="shop-info">
                    <p>
                        <a class="shop-name-link" href="<%= items[i].itemLink %>"><%= items[i].itemDesc %></a>
                    </p>
                    <p>
                        <span>好评率：</span>
                        <span><%= items[i].favRate %></span>
                    </p>
                    <p>
                        <span>宝贝数：</span>
                        <span><%= items[i].storeLimit %></span>
                    </p>
                    <p>
                        <span>最近更新：</span>
                        <span><%= items[i].latestTime %></span>
                    </p>
                </div>
                <div style="clear:both"></div>
            </li>
            <% } %>
        </ul>
    </div>
    <style>
        .nav-glyphish .ui-btn .ui-btn-inner { padding-top: 40px !important; }
        .nav-glyphish .ui-btn .ui-icon { width: 30px!important; height: 30px!important; margin-left: -15px !important; box-shadow: none!important; -moz-box-shadow: none!important; -webkit-box-shadow: none!important; -webkit-border-radius: 0 !important; border-radius: 0 !important; }
        #msg .ui-icon { background:  url(res/icons/icons-white/09-chat-2@2x.png) 50% 50% no-repeat; background-size: 24px 22px; }
        #fav .ui-icon { background:  url(res/icons/icons-white/253-person@2x.png) 50% 50% no-repeat; background-size: 26px 24px;  }
        #list .ui-icon { background:  url(res/icons/icons-white/259-list@2x.png) 50% 50% no-repeat;  background-size: 20px 24px; }
        #setting .ui-icon { background:  url(res/icons/icons-white/19-gear@2x.png) 50% 50% no-repeat;  background-size: 26px 26px; }
    </style>
    <div data-role="footer" class="nav-glyphish" data-position="fixed" data-id="myfooter">
        <div data-role="navbar" class="nav-glyphish">
            <ul>
                <li><a href="/msg" data-icon="custom" id="msg">消息中心</a></li>
                <li><a href="#" data-icon="custom" id="fav" class="ui-btn-active ui-state-persist">我的收藏</a></li>
                <li><a href="/list" data-icon="custom" id="list">逛一逛</a></li>
                <li><a href="/setting" data-icon="custom" id="setting">设置</a></li>
            </ul>
        </div>
    </div>
</div>

    <div data-role="page" id="goods">
        
        <div data-role="header">
            <div data-role="controlgroup" data-type="horizontal">
                　<a href="#shop" data-role="button">店铺</a>
                　<a href="#goods" data-role="button">宝贝</a>
            </div>
        </div>
        
        <div data-role="content">
            
        </div>
        <style>
            .nav-glyphish .ui-btn .ui-btn-inner { padding-top: 40px !important; }
            .nav-glyphish .ui-btn .ui-icon { width: 30px!important; height: 30px!important; margin-left: -15px !important; box-shadow: none!important; -moz-box-shadow: none!important; -webkit-box-shadow: none!important; -webkit-border-radius: 0 !important; border-radius: 0 !important; }
            #msg .ui-icon { background:  url(res/icons/icons-white/09-chat-2@2x.png) 50% 50% no-repeat; background-size: 24px 22px; }
            #fav .ui-icon { background:  url(res/icons/icons-white/253-person@2x.png) 50% 50% no-repeat; background-size: 26px 24px;  }
            #list .ui-icon { background:  url(res/icons/icons-white/259-list@2x.png) 50% 50% no-repeat;  background-size: 20px 24px; }
            #setting .ui-icon { background:  url(res/icons/icons-white/19-gear@2x.png) 50% 50% no-repeat;  background-size: 26px 26px; }
            </style>
        <div data-role="footer" class="nav-glyphish" data-position="fixed" data-id="myfooter">
            <div data-role="navbar" class="nav-glyphish">
                <ul>
                    <li><a href="/msg" data-icon="custom" id="msg">消息中心</a></li>
                    <li><a href="#" data-icon="custom" id="fav" class="ui-btn-active ui-state-persist">我的收藏</a></li>
                    <li><a href="/list" data-icon="custom" id="list">逛一逛</a></li>
                    <li><a href="/setting" data-icon="custom" id="setting">设置</a></li>
                </ul>
            </div>
        </div>
    </div>
    
</body>
</html>