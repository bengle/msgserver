<div data-role="page" id="mylist">
    <link rel="stylesheet" type="text/css" href="/stylesheets/list.css" />
    <div data-role="header">
        <h1>逛一逛</h1>
    </div>

    <div data-role="content">
        <ul class="shop-list-ul" id="shop-list-ul">

        </ul>
        <div id="loading" style="text-align: center"><img src="images/ajax-loader.gif" alt=""></div>
    </div>
    <div data-role="footer" class="nav-glyphish" data-position="fixed" data-id="myfooter">
        <div data-role="navbar" class="nav-glyphish">
            <ul>
                <li><a href="/msg" data-icon="custom" id="msg">消息中心</a></li>
                <li><a href="/fav" data-icon="custom" id="fav">我的收藏</a></li>
                <li><a href="#" data-icon="custom" id="list" class="ui-btn-active ui-state-persist">逛一逛</a></li>
                <li><a href="/setting" data-icon="custom" id="setting">设置</a></li>
            </ul>
        </div>
    </div>
    <textarea id="listTemplate" style="display:none">
        {{#items}}
        <li class="shop-list-li clearfix">
            <div class="shop-logo"><img src="{{pic_url}}" width=64 height=64 /></div>
            <div class="shop-info">
                <p>
                    <a class="shop-name-link" href="{{click_url}}">{{title}}</a>
                </p>
                <p>
                    <span>好评率：</span>
                    <span><</span>
                </p>
                <p>
                    <span>宝贝数：</span>
                    <span>{{volume}}</span>
                </p>
                <p>
                    <span>最近更新：</span>
                    <span></span>
                </p>
            </div>
            <div style="clear:both"></div>
        </li>
        {{/items}}
    </textarea>
</div>
